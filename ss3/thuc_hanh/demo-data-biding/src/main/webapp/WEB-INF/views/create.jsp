</head>
<body>
<form:form modelAttribute="user" action="/user/create-user" method="post">
    name: <form:input path="name"/>
    <br>
    Gender: <form:radiobuttons path="gender" items="${gendersArray}"/>
    <br>
    Is Admin: <form:checkbox path="admin"/>
    <br>
    Hobbie: <form:checkboxes path="hobbie" items="${hobbiesArray}"/>
    <br>
    Type: <form:select path="type" items="${typesArray}"/>
    <br>
    Country: <form:select path="country" items="${countrysArray}"/>
    <br>
    <button type="submit">Submit</button>
</form:form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
